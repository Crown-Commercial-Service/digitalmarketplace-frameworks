{
  "title": "Question",
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "dependencies": {
    "questions": {
      "properties": {
        "type": {"enum": ["multiquestion", "dynamic_list"]}
      }
    },
    "number_of_items": {
      "properties": {
        "type": {"enum": ["list", "boolean_list", "checkbox_tree", "checkboxes"]}
      }
    },
    "unit": {
      "properties": {
        "type": {"enum": ["number"]}
      },
      "required": ["unit_in_full", "unit_position"]
    },
    "fields": {
      "properties": {
        "type": {"enum": ["pricing"]}
      }
    },
    "decimal_place_restriction": {
      "properties": {
        "type": {"enum": ["pricing"]}
      }
    },
    "before_summary_value": {
      "properties": {
        "type": {"enum": ["checkboxes"]}
      }
    },
    "required_value": {
      "properties": {
        "type": {"enum": ["boolean"]}
      }
    },
    "dynamic_field": {
      "properties": {
        "type": {"enum": ["dynamic_list"]}
      }
    },
    "followup": {
      "properties": {
        "type": {"enum": ["boolean", "radios", "checkboxes"]}
      }
    }
  },
  "properties": {
    "question": {
      "type": "string"
    },
    "type": {
      "enum": [
        "boolean", "text", "radios", "list", "boolean_list", "checkboxes", "service_id",
        "pricing", "upload", "number", "textbox_large", "multiquestion", "dynamic_list", "email",
        "checkbox_tree", "date"
      ]
    },
    "question_advice": {
      "type": "string"
    },
    "hint": {
      "type": "string"
    },
    "options": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "label": {
            "type": "string"
          },
          "filter_label": {
            "type": "string"
          },
          "filter_ignore": {
            "type": "boolean"
          },
          "description": {
            "type": "string"
          },
          "value": {
            "type": "string"
          },
          "options": {
            "$ref": "#/properties/options"
          },
          "derived_from": {
            "type": "object",
            "properties": {
              "question": {
                "type": "string"
              },
              "any_of": {
                "type": "array",
                "items": {
                  "oneOf": [
                    {"type": "boolean"},
                    {"type": "string"}
                  ]
                }
              }
            },
            "required": [
              "question",
              "any_of"
            ]
          }
        },
        "additionalProperties": false,
        "required": [
          "label"
        ]
      }
    },
    "name": {
      "type": "string"
    },
    "id": {
      "type": "string"
    },
    "filter_label": {
      "type": "string"
    },
    "questions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "any_of": {
      "type": "string"
    },
    "required_value": {
      "type": "boolean"
    },
    "validations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "enum": [
              "answer_required",
              "assurance_required",
              "dependent_question_error",
              "file_can_be_saved",
              "file_is_less_than_5mb",
              "file_is_open_document_format",
              "invalid_format",
              "max_items_limit",
              "max_less_than_min",
              "not_a_number",
              "not_money_format",
              "not_required_value",
              "under_10_words",
              "under_20_words",
              "under_30_words",
              "under_50_words",
              "under_100_words",
              "under_200_words",
              "under_word_limit",
              "under_character_limit",
              "total_should_be_100"
            ]
          },
          "field": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        },
        "additionalProperties": false,
        "required": [
          "name",
          "message"
        ]
      }
    },
    "depends": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "on": {
            "type": "string"
          },
          "being": {
            "type": "array"
          }
        },
        "additionalProperties": false,
        "required": [
          "on",
          "being"
        ]
      }
    },
    "list_item_name": {
      "type": "string"
    },
    "number_of_items": {
      "type": "integer"
    },
    "assuranceApproach": {
      "enum": [
        "2answers-type1",
        "3answers-type1",
        "3answers-type2",
        "3answers-type3",
        "4answers-type1",
        "4answers-type2",
        "4answers-type3",
        "5answers-type1"
      ]
    },
    "fields": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "price": {"type": "string"},
        "minimum_price": {"type": "string"},
        "maximum_price": {"type": "string"},
        "price_interval": {"type": "string"},
        "price_unit": {"type": "string"},
        "hours_for_price": {"type": "string"}
      }
    },
    "field_defaults": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "minimum_price": {"type": "string"},
        "maximum_price": {"type": "string"},
        "price_interval": {"type": "string"},
        "price_unit": {"type": "string"},
        "hours_for_price": {"type": "string"}
      }
    },
    "decimal_place_restriction": {
      "type": "boolean"
    },
    "max_length_in_words": {
      "type": "integer"
    },
    "optional": {
      "type": "boolean"
    },
    "optional_fields": {
      "type": "array",
      "items": {"type": "string"}
    },
    "limits": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "format": {"type": "string"},
        "max_value": {"type": "number"},
        "min_value": {"type": "number"},
        "integer_only": {"type": "boolean"}
      }
    },
    "empty_message": {
      "type": "string"
    },
    "slug": {
      "type": "string",
      "patterm": "[a-z0-9]([a-z0-9-]*[a-z0-9])?"
    },
    "smaller": {
      "type": "boolean"
    },
    "unit": {
      "type": "string",
      "minLength": 1,
      "maxLength": 1
    },
    "unit_in_full": {
      "type": "string"
    },
    "unit_position": {
      "enum": [
        "after",
        "before"
      ]
    },
    "before_summary_value": {
      "type": "array",
      "items": {"type": "string"}
    },
    "followup": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9]+$": {"type": "array"}
      }
    },
    "dynamic_field": {
      "type": "string"
    },
    "hidden": {
      "type": "boolean"
    },
    "assessment": {
      "type": "object",
      "properties": {
        "passIfIn": {
          "type": "array"
        },
        "discretionary": {
          "type": "boolean"
        },
        "required": {
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "required": [
        "passIfIn"
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "question",
    "type"
  ]
}
