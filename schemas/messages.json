{
  "title": "Message",
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "anyOf": [
    {"$ref": "#/definitions/dates"},
    {"$ref": "#/definitions/frameworkStates"},
    {"$ref": "#/definitions/urls"},
    {"$ref": "#/definitions/contract_variation"},
    {"$ref": "#/definitions/advice"},
    {"$ref": "#/definitions/descriptions"}
  ],
  "definitions": {
    "dates": {
      "properties": {
        "clarifications_close_date": {"type": "string"},
        "clarifications_publish_date": {"type": "string"},
        "framework_close_date": {"type": "string"},
        "intention_to_award_date": {"type": "string"},
        "framework_live_date": {"type": "string"}
      },
      "required": [
        "clarifications_close_date", "clarifications_publish_date",
        "framework_close_date", "intention_to_award_date", "framework_live_date"
      ],
      "additionalProperties": false
    },
    "frameworkStates": {
      "properties": {
        "coming": {
          "type": ["object", "string"]
        },
        "open": {
          "type": ["object", "string"]
        },
        "pending": {
          "type": ["object", "string"]
        },
        "standstill": {
          "type": ["object", "string"]
        },
        "live": {
          "type": ["object", "string"]
        },
        "expired": {
          "type": ["object", "string"]
        }
      },
      "additionalProperties": false
    },
    "urls": {
      "properties": {
        "call_off_contract_url": {"type": "string"},
        "framework_url": {"type": "string"},
        "framework_agreement_url": {"type": "string"},
        "framework_agreement_pdf_url": {"type": "string"},
        "supplier_guide_url": {"type": "string"},
        "customer_benefits_record_form_url": {"type": "string"},
        "customer_benefits_record_form_email": {"type": "string"},
        "buyers_guide_compare_services_url": {"type": "string"}
      },
      "required": [
        "supplier_guide_url"
      ],
      "additionalProperties": false
    },
    "advice": {
      "properties": {
        "use_of_service_data": {"type": "string"},
        "lots": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "slug": {
                "type": "string"
              },
              "body": {
                "type": "string"
              },
              "advice": {
                "type": "string"
              }
            },
            "required": [
              "slug",
              "body"
            ]
          }
        }
      },
      "additionalProperties": false
    },
    "contract_variation": {
      "properties": {
        "variation_description_not_in_place": {
          "type": "string"
        },
        "variation_not_yet_agreed_extra": {
          "type": "string"
        },
        "variation_description_in_place": {
          "type": "string"
        },
        "confirmation_message": {
          "type": "string"
        },
        "framework_agreement_changes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "clause": {
                "type": "string"
              },
              "change": {
                "type": "string"
              }
            }
          }
        },
        "call_off_contract_changes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "clause": {
                "type": "string"
              },
              "change": {
                "type": "string"
              }
            }
          }
        }
      },
      "required": [
        "variation_description_not_in_place",
        "variation_description_in_place",
        "framework_agreement_changes",
        "call_off_contract_changes"
      ],
      "additionalProperties": false
    },
    "descriptions": {
      "properties": {
        "framework": {"type": "string"}
      },
      "required": ["framework"]
    }
  }
}
