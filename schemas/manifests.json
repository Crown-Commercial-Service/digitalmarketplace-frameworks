{
  "title": "Manifest",
  "$schema": "http://json-schema.org/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string"
      },
      "summary_page_description": {
        "type": "string"
      },
      "editable": {
        "type": "boolean"
      },
      "edit_questions": {
        "type": "boolean"
      },
      "questions": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "description": {
        "type": "string"
      },
      "step": {
        "type": "integer"
      }
    },
    "required": ["name", "questions"],
    "additionalProperties": false
  }
}
