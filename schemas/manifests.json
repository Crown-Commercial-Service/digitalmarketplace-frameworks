{
  "title": "Manifest",
  "$schema": "http://json-schema.org/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string"
      },
      "summary_page_description": {
        "type": "string"
      },
      "editable": {
        "type": "boolean"
      },
      "edit_questions": {
        "type": "boolean"
      },
      "questions": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "description": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "object",
            "properties": {
              "saas": {"type": "string"},
              "paas": {"type": "string"},
              "iaas": {"type": "string"},
              "scs": {"type": "string"},
              "digital-outcomes": {"type": "string"},
              "digital-specialists": {"type": "string"},
              "user-research-participants": {"type": "string"},
              "user-research-studios": {"type": "string"},
              "default": {"type": "string"}
            },
            "additionalProperties": false
          }
        ]
      },
      "step": {
        "type": "integer"
      }
    },
    "required": ["name", "questions"],
    "additionalProperties": false
  }
}
