{
  "title": "Metadata",
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "anyOf": [
    {"$ref": "#/definitions/copying-services"},
    {"$ref": "#/definitions/following-framework"}
  ],
  "definitions": {
    "copying-services": {
      "properties": {
        "source_framework": {"type": "string"},
        "questions_to_copy": {
          "type": "array",
          "items": {"type": "string"}
        }
      },
      "required": [
        "source_framework",
        "questions_to_copy"
      ],
      "additionalProperties": false
    },
    "following-framework": {
      "properties": {
        "slug": {"type": "string"},
        "framework": {
          "type": "object",
          "properties": {
            "slug": {"type": "string"},
            "name": {"type": "string"},
            "coming": {"type": "string"}
          }
        }
      },
      "oneOf": [
        {"required": ["slug"]},
        {"required": ["framework"]}
      ],
      "additionalProperties": false
    }
  }
}
